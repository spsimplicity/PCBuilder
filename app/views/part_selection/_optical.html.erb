<div class="part" <% if makeChange.to_i == disc_driveObj.part_id %> style="background: #268358;" <% end %> >
	<div class="always_visibile">
		<div class="part_info">
			<p class="first_row beginning"><%= disc_driveObj.manufacturer %></p>
			<p class="first_row"><%= disc_driveObj.model %></p>
			<p class="price">$<%= disc_driveObj.price %></p>
			<p class="second_row beginning">Type: <%= disc_driveObj.drivetype %></p>
			<p class="second_row">Interface: <%= disc_driveObj.interface %></p>
		</div>
		<div class="add">
		    <% if makeChange && makeChange.to_i != disc_driveObj.part_id%>
				<center><%= link_to "Sub", :controller => :part_selection, :action => :add_part, :id => disc_driveObj.part_id, :didChange => makeChange %></center>
			<% elsif !makeChange %>
				<center><%= link_to "Add", :controller => :part_selection, :action => :add_part, :id => disc_driveObj.part_id, :didChange => makeChange %></center>
			<% end %>
		</div>
	</div>
	<div id="specs<%= num %>" class="part_specs" style="display: none">
		<p>Manufacturer Website: <%= disc_driveObj.manufacturerwebsite %></p>
		<p>Google Price: <%= disc_driveObj.googleprice %></p>
		<p>Cache: <%= disc_driveObj.cache %></p>
	</div>
	<div class="show_specs">
		<center>
		    <button id="arrow<%= num %>" class="arrow_button" onclick="getSpecs('specs<%= num %>', 'arrow<%= num %>', 'Left_span<%= num %>')">
			    <span id="Left_span<%= num %>" style="color: white; font-size: small">Show</span>
				<span id="Right_span" style="color: white; font-size: small">Specs</span>
			</button>
		</center>
	</div>
</div>