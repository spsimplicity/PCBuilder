<div id="Main">
	<div id="Content">
		<div id="components">
			<div class="component-line"> 
				<div id="Motherboard" class="component component-top-left" <% if session[:computer].motherboard_id %> style="background-color: #268358;" <% end %> >
				    <% link_to :controller => :part_selection, :action => :init, :part_type => "Motherboards", :change => nil do %>
						<%= image_tag 'Motherboard.jpg', :class => 'component-title' %>
						<p class="category_name">Motherboards<span style="color: #71D0CE">*</span></p>
						<p class="component-description">The backbone of the computer. All parts are connected through the motherboard.</p>
					<% end %>
				</div>
				<div id="CPU" class="component component-top-middle" <% if session[:computer].cpu_id %> style="background-color: #268358;" <% end %> >
					<% link_to :controller => :part_selection, :action => :init, :part_type => "Processors", :change => nil do %>
						<%= image_tag "CPU.jpg", :class => "component-title" %>
						<p class="category_name">Processors<span style="color: #71D0CE">*</span></p>
						<p class="component-description">The central processing unit for the computer. All tasks on the computer are run by this.</p>
					<% end %>
				</div>
				<div id="CPU-Cooler" class="component component-top-middle" <% if session[:computer].cpu_cooler_id %> style="background-color: #268358;" <% end %> >
					<% link_to :controller => :part_selection, :action => :init, :part_type => "CPU Coolers", :change => nil do %>
						<%= image_tag "Cooler.jpg", :class => "component-title" %>
						<p class="category_name">Coolers</p>
						<p class="component-description">Aftermarket CPU coolers perform much better than stock coolers and increase performance of the CPU.</p>
					<% end %>
				</div>
				<div id="Disc-Drive" class="component component-top-right" <% if @dd %> style="background-color: #268358;" <% end %> >
					<% link_to :controller => :part_selection, :action => :init, :part_type => "Disc Drives", :change => nil do %>
						<%= image_tag "DD.jpg", :class => "component-title" %>
						<p class="category_name">Disc Drives</p>
						<p class="component-description">Reads data on discs for the computer and writes information to disc.</p>
					<% end %>
				</div>
			</div>
			<div class="component-line">
				<div id="Graphics-Card" class="component component-middle-left" <% if @gpu %> style="background-color: #268358;" <% end %> >
					<% link_to :controller => :part_selection, :action => :init, :part_type => "Graphics Cards", :change => nil do %>
						<%= image_tag "Graphics_Card.jpg", :class => "component-title" %>
						<p class="category_name">Graphics Cards</p>
						<p class="component-description">Greatly improves movie, rendering, and game performance on your computer.</p>
					<% end %>
				</div>
				<div id="Hard-Drive" class="component component-middle" <% if @hdd %> style="background-color: #268358;" <% end %> >
					<% link_to :controller => :part_selection, :action => :init, :part_type => "Hard Drives", :change => nil do %>
						<%= image_tag "HDD.jpg", :class => "component-title" %>
						<p class="category_name">Hard Drives<span style="color: #71D0CE">*</span></p>
						<p class="component-description">Stores all the data for your computer.</p>
					<% end %>
				</div>
				<div id="Power-Supply" class="component component-middle" <% if session[:computer].power_supply_id %> style="background-color: #268358;" <% end %> >
					<% link_to :controller => :part_selection, :action => :init, :part_type => "Power Supplies", :change => nil do %>
						<%= image_tag "Power_Supply.jpg", :class => "component-title" %>
						<p class="category_name">Power Supplies<span style="color: #71D0CE">*</span></p>
						<p class="component-description">Powers each part of your computer. Cannot power more than the specified wattage.</p>
					<% end %>
				</div>
				<div id="Memory" class="component component-middle-right" <% if @mem %> style="background-color: #268358;" <% end %> >
					<% link_to :controller => :part_selection, :action => :init, :part_type => "Memory", :change => nil do %>
						<%= image_tag "Ram.jpg", :class => "component-title" %>
						<p class="category_name">Memory<span style="color: #71D0CE">*</span></p>
						<p class="component-description">Memory acts as a temporary data storage for applications that are running on your computer.</p>
					<% end %>
				</div>
			</div>
			<div class="component-line">
				<div id="Case" class="component component-bottom-left" <% if session[:computer].case_id %> style="background-color: #268358;" <% end %> >
					<% link_to :controller => :part_selection, :action => :init, :part_type => "Cases", :change => nil do %>
						<%= image_tag "Case.jpg", :class => "component-title" %>
						<p class="category_name">Cases<span style="color: #71D0CE">*</span></p>
						<p class="component-description">The case houses all the components of your computer</p>
					<% end %>
				</div>
				<div id="Monitor" class="component component-bottom-middle" <% if @mon %> style="background-color: #268358;" <% end %> >
					<% link_to :controller => :part_selection, :action => :init, :part_type => "Displays", :change => nil do %>
						<%= image_tag "Display.jpg", :class => "component-title" %>
						<p class="category_name">Displays<span style="color: #71D0CE">*</span></p>
						<p class="component-description">The larger the resolution, the more that can be displayed on the screen. Can be paired with other monitor for a multi-display setup.</p>
					<% end %>
				</div>
				<div class="component component-bottom-middle component-empty">
				    <% if session[:user] %>
					    <% form_tag :controller => :part_categories, :action => :saveBuild do %>
						    <%= label_tag :saving, "Save Computer Build", :class => "save_label" %>
							<% if session[:computer].id %>
							    <%= text_field_tag :saving, session[:computer].name, :size => 25, :class => "save_field" %>
							    <%= submit_tag "Update Build", :disable_with => "Updating..." %>
							<% else %>
							    <%= text_field_tag :saving, nil, :size => 25, :class => "save_field" %>
							    <%= submit_tag "Save Build", :disable_with => "Saving..." %>
							<% end %>
						<% end %>
					<% end %>
				</div>
				<div class="component component-bottom-right component-empty">
					<p style="margin:1em; font-size:10pt"><span style="color: #71D0CE">* </span><span style="color:white">Required items are needed only if you are making a complete system.</span></p>
				</div>
				<div class="component component-bottom-right component-empty">
					<p style="margin:1em; font-size:10pt"><span style="color: #268358">* </span><span style="color:white">A green box signifies that a part from this category has been chosen.</span></p>
				</div>
			</div>
		</div>
	</div>
	<%= render :partial => "selected_tab", :locals => {
		:comp_mobo => Motherboard.find_by_part_id(session[:computer].motherboard_id),
		:comp_cpu => Cpu.find_by_part_id(session[:computer].cpu_id),
		:comp_cooler => CpuCooler.find_by_part_id(session[:computer].cpu_cooler_id),
		:comp_case => Case.find_by_part_id(session[:computer].case_id),
		:comp_power => PowerSupply.find_by_part_id(session[:computer].power_supply_id)
	} %>
</div>